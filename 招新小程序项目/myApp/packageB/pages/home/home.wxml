<!-- 主页面显示内容 -->
<view hidden="{{!loadingComplete}}">
  <!-- 顶部tab栏 -->
  <titletabbar style="width: 100%;padding: 0;margin: 0;"></titletabbar>
  <!-- 主体页面 -->
  <view class="main">
    <!-- LOG大图 -->
    <view class="logo_font" >
      <image src="../../../utils/photos/logo_font.jpg" mode="" />
    </view>
    <!-- 方向介绍icon -->
    <view class="divider">
      <van-divider contentPosition="center" border-color="grey" textColor="#5b08c3" fontSize="10" display="block">欢迎来访</van-divider>
    </view>
    <!-- 各组介绍渲染 -->
    <view class="group_container">
      <view wx:for="{{groups}}" wx:for-index="index" class="group {{item.isShow?'slident-item':''}}" wx:key="id">
        <view class="group_name">
          <image src="{{item.icon}}" alt="" /> |
          {{item.group}}
        </view>
        <!-- 小组图片 -->
        <view class="group_pic">
          <image src="{{item.url}}" mode="" />
        </view>
        <!-- 小组介绍 -->
        <view class="group_description">
          <text class="typeout">
            {{item.text}}
          </text>
        </view>
      </view>
    </view>

    <!-- 火箭动画 -->
    <view class="rocket_container">
      <view class="rocket">
        <view class="rocket-body">
          <view class="body"></view>
          <view class="fin fin-left"></view>
          <view class="fin fin-right"></view>
          <view class="window"></view>
        </view>
        <view class="exhaust-flame"></view>
        <view class="exhaust-fumes">
          <view></view>
          <view></view>
          <view></view>
          <view></view>
          <view></view>
          <view></view>
          <view></view>
          <view></view>
          <view></view>
        </view>
        <view class="star">
          <view></view>
          <view></view>
          <view></view>
          <view></view>
          <view></view>
          <view></view>
          <view></view>
        </view>
      </view>
    </view>
        <!-- 方向介绍icon -->
        <view class="divider" style="z-index: 999;background-color: #fff;">
      <van-divider contentPosition="center" border-color="grey" textColor="#fffff" fontSize="10" display="block" >点击发射按钮🚀，一起启程吧😋
      </van-divider>
    </view>
    <!-- 首页页脚 -->
    <view class="footer-content" style="padding-top: 70px;">
      <!-- 发射按钮 -->
      <view style="padding: 100px 0;">
        <launchswitch></launchswitch>
      </view>
      <view class="footer-content__other-links">
        <a href="#" title="QG招新">
          <view>项目合作</view>
          <view class="footer-content__other-links__item-line"></view>
        </a>
        <a href="#" title="移动应用">
          <view>移动应用</view>
          <view class="footer-content__other-links__item-line"></view>
        </a>
        <a href="#" title="关于我们">
          <view>关于我们</view>
          <view class="footer-content__other-links__item-line"></view>
        </a>
        <a href="#" title="反馈问题" class="last-footer-content-other-links">
          <view>问题反馈</view>
          <view></view>
        </a>
      </view>
      <view class="footer-content__copyright-eng">Copyright © 2023-2024 QG-studio. All Rights Reserved.</view>
      <view class="footer-content__copyright-txt">QG工作室 版权所有</view>
    </view>
  </view>
</view>