/* pages/C_loginIn/C_loginIn.wxss */
.box {
  background-color: #fff;
  padding: 60rpx 30rpx 160rpx 30rpx;
  border: 1px solid rgba(236, 236, 236, 1);
  box-shadow: 0px 4px 16px 0px rgba(133, 133, 133, 0.25);
}

.van-notice-bar {
  border-top-left-radius: 18rpx;
  border-top-right-radius: 18rpx;
}

.title {
  padding: 0 50rpx;
  height: 200rpx;
  margin: 40rpx 0;
  /* background-color: aqua; */
}

.title view {
  border-bottom: 1px solid rgb(226, 226, 222);
  margin: 10rpx 0;
  padding: 10rpx 0;
}

.title text {
  color: rgb(190, 192, 192);
  margin-left: 20rpx;
}

.sign {
  height: 300rpx;
  /* background-color: #fff; */
  display: flex;
  justify-content: center;
  align-items: center;

}

.sign button {
  height: 250rpx;
  width: 250rpx;
  border-radius: 50%;
  background-color: #5b08c3;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: larger;
  box-shadow: 0 0 0 #5b08c3;
  opacity: .8;
  animation: pulse 3s infinite;
  cursor: pointer;
}

.custom-class {
  cursor: pointer;
}

@keyframes pulse {
  0% {
    box-shadow: 0 0 0 #5b08c3;
  }

  70% {
    box-shadow: 0 0 60rpx rgba(0, 0, 255, 0);
  }

  100% {
    box-shadow: 0 0 0 rgba(0, 0, 255, 0);
  }
}

.position {
  margin-bottom: 0rpx;
  padding-left: 35rpx;
}

.position text {
  color: rgb(110, 111, 112);
  overflow: hidden;
  white-space: nowrap;
  /* 不换行 */
  text-overflow: ellipsis;
  /* 显示省略号 */
}

.position view {
  display: flex;
  align-items: center;
  color: #5b08c3;
  margin-left: 20rpx;
  justify-content: center;
}

.message {
  padding: 0 20rpx;
  margin-top: 20rpx;
}

.cancel {
  width: 100rpx;
  height: 100rpx;
  background-color: aquamarine;
  position: fixed;
  right: 30rpx;
  bottom: 200rpx;
  border-radius: 50%;
  box-shadow: 0 0 20rpx rgb(110, 108, 108, .8);
}

.btn {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  font-size: 20rpx;
  color: #fff;
  background-color: #5b08c3;
  letter-spacing: 3rpx;
  /* font-family: cursive; */
}

@keyframes emit {
  0% {}

  100% {
    border-width: 1px;
    opacity: 0;
    transform: scale(1.3);
  }
}

.line {
  width: 100rpx;
  height: 100rpx;
  border: 3rpx solid rgb(188, 142, 240);
  position: absolute;
  top: 0;
  box-sizing: border-box;
  border-radius: 50%;
  animation: emit 3s infinite;
}

.buttombar {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
}