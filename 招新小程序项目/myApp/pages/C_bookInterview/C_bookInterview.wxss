/* pages/C_bookInterview/C_bookInterview.wxss */
page{
  
background-size: 100% 100%;
height: auto;
}
.box{
  /* background-color: #fff; */
/* height: 1100rpx; */
  margin: 30rpx;
  border: 1px solid rgba(236, 236, 236, 1);
box-shadow: 0px 4px 16px 0px rgba(133, 133, 133, 0.25);
border-radius: 16px;
padding: 20rpx 0 100rpx 0;
}
.empty{
  margin-top: 300rpx;
  
}
.detail{
  height: 300rpx;

  display: flex;
}
.detail view:first-child{
  height: 300rpx;
  width: 200rpx;
  display: flex;
  align-items: center;
  
}
.detail view:nth-child(2){
  /* background-color: rgb(106, 163, 163); */
  height: 300rpx;
  width: calc(100% - 200rpx);
  display: flex;
  flex-direction: column;
  color: rgb(112, 113, 114);
}
.detail text{
  margin: 20rpx 40rpx;
  letter-spacing: 0.3em;
}
.head{
  border-radius: 50%;
  height: 80rpx;
  width: 80rpx;
}
.time{
  display: flex;
  flex-direction: column;
}

.time_text{
margin: 20rpx 0;
/* background-color: rgb(218, 216, 216); */
height: 80rpx;
display: flex;
align-items: center;
padding: 0 30rpx;
}
.time_tab{
  margin-bottom: 20rpx;
  /* background-color: #db3a3a; */
  height: 100rpx;
  /* background-color: aqua; */
  display: flex;
 align-items: center;
 justify-content: center;
 border-bottom: 1px solid rgb(194, 188, 188);
}


.van-tabs--line{
  background-color: none;
}
