/* pages/C_loginIn/C_loginIn.wxss */
.box{
  background-color: #fff;
/* height: 1100rpx; */
  margin: 30rpx 30rpx;
  border: 1px solid rgba(236, 236, 236, 1);
box-shadow: 0px 4px 16px 0px rgba(133, 133, 133, 0.25);
border-radius: 16px;

}
.van-notice-bar {
  border-top-left-radius:18rpx; 
  border-top-right-radius:18rpx; 
}
.title{
padding: 0 50rpx;
height: 200rpx;
margin: 40rpx 0;
/* background-color: aqua; */
}
.title view{
  border-bottom: 1px solid rgb(226, 226, 222);
  margin: 10rpx 0;
  padding: 10rpx 0;
}
.title text{
  color: rgb(190, 192, 192);
  margin-left: 20rpx;
}
.sign{
 height: 300rpx;
 background-color: #fff;
 display: flex;
 justify-content: center;
 align-items: center;

}
.sign button{
  height: 250rpx;
  width: 250rpx;
  border-radius: 50%;
  background-color: #5b08c3;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: larger;
  box-shadow: 0 0 0 #5b08c3;
  opacity: .8;
  animation: pulse 3s infinite;
  cursor: pointer;
}
.custom-class {
  cursor: pointer;
}
@keyframes pulse {
  0% {
    box-shadow: 0 0 0 #5b08c3;
  }
  70% {
    box-shadow: 0 0 60rpx rgba(0, 0, 255, 0);
  }
  100% {
    box-shadow: 0 0 0 rgba(0, 0, 255, 0);
  }
}
.position{
  display: flex;
  align-items: center;
  margin-bottom: 50rpx;
  padding-left: 35rpx;
}

.position text{
  color: rgb(110, 111, 112);
}
.position view{
  color: #5b08c3;
  margin-left: 20rpx;
}
.message{
  padding: 0 20rpx;
  margin-top: 20rpx;
}